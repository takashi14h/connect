<!DOCTYPE html>
<html>
  <head>
    <title>Connect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=<%= ENV['AIzaSyCXh1kdA_esZRlKAZgjbH3d88fZ4N6_NRs'] %>"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-shadow navbar-fixed-top">
        <% if user_signed_in? %>
        <div class="container-fluid">
          <div class="search navbar-left search-left">
            <form action="<%= users_search_path %>" method="get" class="form-inline">
              <input type="text" id="search__bar" name="s_title" required size="10" placeholder=" ユーザー名" value="<%= request[:s_title] %>">
                <button  class="search__box" type="submit">
                    <span class="search__box__txt" ><%= image_tag "/images/search.png", alt:"" %> 検索</span>
                </button>
            </form>
          </div>
          <div class="collapse navbar-collapse navbar-right"">
            <%= link_to user_path(current_user.id), class: "btn btn-default navbar-btn navbar-color" do %>
              <%= fa_icon("user-circle lg")%>
              <% if current_user.user_name.present? %>
                  <%= current_user.user_name %>
              <% else %>
                  <%= current_user.user_key %>
              <% end %>
            <% end %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn navbar-color" %>
          </div>
          <div class="navbar-header">
            <%= link_to "C:connect", root_path, class: "navbar-brand navbar-center2"%>
          </div>
        <% else %>
          <div class="collapse navbar-collapse navbar-left"">
            <%= link_to new_user_session_path, class: "btn btn-default navbar-btn navbar-color" do %>
              <%= fa_icon("user-circle lg")%> Sign in
            <% end %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default navbar-btn navbar-color" %>
          </div>
          <div class="navbar-header">
            <%= link_to "C:connect", root_path, class: "navbar-brand navbar-center1"%>
          </div>
              <div class="search navbar-right search-right">
                <form action="<%= users_path %>" method="get" class="form-inline">
                  <input type="text" id="search__bar" name="s_title" required size="10" placeholder=" ユーザー名" value="<%= request[:s_title] %>">
                    <button  class="search__box" type="submit">
                        <span class="search__box__txt" ><%= image_tag "/images/search.png", alt:"" %> 検索</span>
                    </button>
                </form>
              </div>
        <% end %>
      </div>
    </nav>
    <div class="back-head">
    </div>
      <div class="slick banner">
          <div class="visual-img1 banner_content">広告１</div>
          <div class="visual-img2 banner_content">広告２</div>
          <div class="visual-img3 banner_content">広告３</div>
      </div>
    <%= yield %>
    <footer class="footer">
        <div class="footer__logo"></div>
        <div class="footer__nav">
          <nav>
            <ul>
              <li class="footer__li"><a href="" title=""></a>会社概要</li>
              <li class="footer__li"><a href="" title=""></a>お問い合わせ</li>
            </ul>
          </nav>
        </div>
        <div class="footer__icon">
          <%= fa_icon("facebook-f 2x")%>
          <%= fa_icon("twitter 2x")%>
          <%= fa_icon("instagram 2x")%>
        </div>
        <p class="footer__copyright">Copyright ©︎ 2018 C:connect.inc All rights reserved.</p>
    </footer>
  </body>
</html>

<script>
 　$('.banner').slick({
  slidesToShow: 1,
  slidesToScroll: 1,
  autoplay: true,
  autoplaySpeed: 3000,
  arrows: false,
  pauseOnHover: true,
  infinite: true,
 });
</script>

<script>
  $(function() {
    $('.mo_iconn').hover(function(){
        $('.'+$(this).data('mo')).addClass('active');
        if ($(this).hasClass('style_span')) {
            $('.mo_style').addClass('active');
        } else if ($(this).hasClass('color_span')) {
            $('.mo_color').addClass('active');
        } else if ($(this).hasClass('menu_span')) {
            $('.mo_menu').addClass('active');
        } else if ($(this).hasClass('clothes_span')) {
            $('.mo_clothes').addClass('active');
        } else if ($(this).hasClass('age_span')) {
            $('.mo_age').addClass('active');
        } else if ($(this).hasClass('area_span')) {
            $('.mo_area').addClass('active');
        } else {
            $('.mo_price').addClass('active');
        }
        $('.active').hover(function() {

        }, function() {
            $('.active').removeClass('active');
        })
    }, function() {
    });
  });
</script>