<!DOCTYPE html>
<html>
  <head>
    <title>Connect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-shadow">
      <div class="container-fluid">
        <% if user_signed_in? %>
          <div class="collapse navbar-collapse navbar-right" id="navbarEexample4">
            <button type="button" class="btn btn-default navbar-btn navbar-color"><%= fa_icon("user-circle lg")%>
            <%= current_user.user_key %></button>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn navbar-color" %>
          </div>
          <div class="navbar-header">
            <%= link_to "C:connect", root_path, class: "navbar-brand navbar-center2"%>
          </div>
        <% else %>
          <div class="collapse navbar-collapse navbar-left" id="navbarEexample4">
            <%= link_to new_user_session_path, class: "btn btn-default navbar-btn navbar-color" do %>
              <%= fa_icon("user-circle lg")%> Sign in
            <% end %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default navbar-btn navbar-color" %>
          </div>
          <div class="navbar-header">
            <%= link_to "C:connect", root_path, class: "navbar-brand navbar-center1"%>
          </div>
        <% end %>
      </div>
    </nav>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarEexample1">
          <ul class="nav navbar-nav">
            <li><a href="#">ALL</a></li>
            <li><a href="#">MEN</a></li>
            <li><a href="#">WOMEN</a></li>
            <li><a href="#">KIDS</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
              <h1>サイドバー</h1>
            </div>
            <%= yield %>
        </div>
    </div>
  </body>
</html>
