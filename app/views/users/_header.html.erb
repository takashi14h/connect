<div class="user-label">
    <div class='mypage-image col-md-5'>
        <% if user.profile_image.present? %>
            <%= link_to users_toukou_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 148, 148, format: 'jpeg' %>
            <% end %>
        <% else %>
            <%= link_to users_toukou_path(user.id) do %>
                <%= image_tag "no_image.jpg",class: "img-circle", size: "148x148" %>
            <% end %>
        <% end %>
    </div>
    <div class="mypage-user-key col-md-4">
            <%= user.user_key %>
    </div>
    <div class="user-<%= user.id %> col-md-3">
        <% if current_user == user %>
        <% else %>
            <%= render "relationships/user", user: user %>
        <% end %>
    </div>
</div>

<nav class="navbar navbar-default mypage-nav">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarEexample1">
            <ul class="nav navbar-nav">
                <li><%= link_to "投稿", users_toukou_path(user.id) %></li>
                <li><%= link_to "お気に入り", users_okini_path(user.id) %></li>
                <li><%= link_to "フォロワー", users_followed_path(user.id) %></li>
                <li><%= link_to "フォロー", users_follower_path(user.id) %></li>
            </ul>
        </div>
    </div>
</nav>