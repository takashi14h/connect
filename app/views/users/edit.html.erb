			<%= link_to_add_association "追加", f, :f_middles %>
		</div>

		<div class="form-group">
			<%= f.label :introduce, "自己紹介：", class:"col-lg-3 control-label" %>
			<div class="">
				<%= f.text_area :introduce %>
			</div>
		</div>
