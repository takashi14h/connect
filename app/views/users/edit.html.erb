<div>
	<% if flash[:notices] %>
		<div class="flash">
			<%= flash[:notices] %>
		</div>
	<% end %>
</div>
<div class>
	<%= form_for(@user) do |f| %>
		<div class="form-group">
			<%= f.label :profile_image, "プロフィール画像：", class:"col-lg-3 control-label"  %>
	        <div class="">
	        	 <%= f.attachment_field :profile_image %>
	    	</div>
	    </div>

		<div class="form-group">
			<%= f.label :user_name, "ニックネーム：", class:"col-lg-3 control-label" %>
			<div class="">
				<%= f.text_field :user_name %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :age, "年齢：", class:"col-lg-3 control-label" %>
